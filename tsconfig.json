{
  "extends": "@react-native/typescript-config/tsconfig.json",
  "compilerOptions": {
    "types": ["styled-components-react-native"],
    "strict": true,
    "paths": {
      "@/*": ["src/*"],
      "@assets/*": ["src/assets/*"]
    },
    "target": "esnext",
    "module": "Node16",
    "jsx": "react-native",
    "moduleResolution": "node16",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "."
  },
  "include": ["**/*.ts", "**/*.tsx"]
}
